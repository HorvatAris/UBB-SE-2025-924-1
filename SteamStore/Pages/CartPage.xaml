<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamStore.Pages.CartPage"
    x:Name="CartPageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamStore.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Define Rows for the Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- List of Games -->
            <RowDefinition Height="Auto"/>
            <!-- Payment Method and Checkout -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Your Cart" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,20"
                   Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                   Grid.Row="0"/>

        <!-- List of Games in Cart -->
        <ListView ItemsSource="{Binding CartGames}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="20,0,20,20"
                  Background="Transparent"
                  BorderThickness="0"
                  Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,10,40,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Game Image -->
                        <Image Source="{Binding ImagePath}"
                                Width="144" Height="144" 
                                Stretch="UniformToFill"
                                Margin="0,4,0,0"/>

                        <!-- Game Name and Price -->
                        <StackPanel Grid.Column="1"
                                    Margin="20,0,0,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                            <TextBlock Text="{Binding Price}"
                                       FontSize="14"
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>

                        <!-- Remove Button -->
                        <Button Grid.Column="2"
                                
                                Content="Remove"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="10,0,10,0"
                                Padding="10,5"
                                Background="Red"
                                Foreground="White"
                                
                                Command="{Binding DataContext.RemoveGameCommand, ElementName=CartPageRoot}"
                                CommandParameter="{Binding}"
                               
                                />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Payment Method Selection and Checkout Section -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Payment Method Selection -->
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="20">
                <ComboBox x:Name="PaymentMethodComboBox"
                          Header="Select Payment Method"
                          Width="200"
                          SelectedIndex="0"
                          SelectedValue="{Binding SelectedPaymentMethod, Mode=TwoWay}"
                          SelectedValuePath="Content">
                          
                          
                         
                    <ComboBoxItem Content="Steam Wallet"/>
                    <ComboBoxItem Content="PayPal"/>
                    <ComboBoxItem Content="Credit Card"/>
                </ComboBox>
            </StackPanel>

            <!-- Total Price and Checkout Button -->
            <StackPanel HorizontalAlignment="Right"
                         VerticalAlignment="Center"
                         Orientation="Horizontal"
                         Spacing="20">
                <TextBlock Text="{Binding TotalPrice}"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <Button Content="Checkout"
                        Padding="20,10"
                        Background="{ThemeResource SystemAccentColor}"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Click="CheckoutButton_Click"
                        />
            </StackPanel>
        </Grid>
    </Grid>
</Page>